#!/usr/bin/env bash

if [ ! -d "$USER_HOME/.vim/colors" ]; then
	mkdir -p ~/.vim/colors
fi
if [ ! -d "$USER_HOME/.vim/autoload" ]; then
	mkdir -p ~/.vim/autoload
fi
if [ ! -d "$USER_HOME/.vim/bundle" ]; then
	mkdir -p ~/.vim/bundle
fi
if [ ! -d "$USER_HOME/.vim/backup" ]; then
	mkdir -p ~/.vim/backup
fi
if [ ! -d "$USER_HOME/.vim/tmp" ]; then
	mkdir -p ~/.vim/tmp
fi

rm -f ~/.vimrc
ln -f ./vim/.vimrc ~/.vimrc
cp ./vim/colors/*.* ~/.vim/colors
cp ./vim/pathogen.vim ~/.vim/autoload
if [ ! -d "$USER_HOME/.vim/bundle/vundle" ]; then
	git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
fi
if [ ! -d "$USER_HOME/.vim/bundle/vim-json" ]; then
	git clone https://github.com/elzr/vim-json.git ~/.vim/bundle/vim-json
fi
if [ ! -d "$USER_HOME/.vim/bundle/vim-rails" ]; then
	git clone git://github.com/tpope/vim-rails.git ~/.vim/bundle/vim-rails
fi
if [ ! -d "$USER_HOME/.vim/bundle/vim-bundler" ]; then
	git clone git://github.com/tpope/vim-bundler.git ~/.vim/bundle/vim-bundler
fi
