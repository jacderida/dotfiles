#!/usr/bin/env bash

if [ ! -d "~/.vim/colors" ]; then
	mkdir -p ~/.vim/colors
fi
if [ ! -d "~/.vim/autoload" ]; then
	mkdir -p ~/.vim/autoload
fi

if [ -f "~/.vimrc" ]
then
	rm ~/.vimrc
	ln ./vim/.vimrc ~/.vimrc
else
	ln ./vim/.vimrc ~/.vimrc
fi
cp ./vim/colors/*.* ~/.vim/colors
cp ./vim/pathogen.vim ~/.vim/autoload
