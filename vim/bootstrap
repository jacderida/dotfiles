#!/usr/bin/env bash

if [ ! -d "~./.vim/colors" ]; then
	mkdir -p ~/.vim/colors
fi
if [ ! -d "~./.vim/autoload" ]; then
	mkdir -p ~/.vim/autoload
fi

pip install --user git+git://github.com/Lokaltog/powerline
if [ -f "~/.vimrc" ]; then
	rm ~/.vimrc
fi
cp ./vim/colors/*.* ~/.vim/colors
cp ./vim/pathogen.vim ~/.vim/autoload
ln ./vim/.vimrc ~/.vimrc
