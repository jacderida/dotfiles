[user]
    name = "Chris O'Neil"
    email = chriso83@protonmail.com
[core]
    editor = nvim
    pager = delta
[web]
    browser = google-chrome
[color]
    ui = true
[github]
    user = jacderida
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    cmd = vim -d $LOCAL $REMOTE $BASE $MERGED
    keepBackup = false
    trustExitCode = false
[alias]
    st = status
    ci = commit
    aa = add --all
    pom = push origin master
    prlog = log --format=format:\"- %h **%s**%n%n%w(0,2,2)%b\" --reverse origin/HEAD..HEAD
[interactive]
    diffFilter = delta --color-only
[delta]
    line-numbers = true
    navigate = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
